# .env.example
# Application Settings
APP_NAME=MJ Network
APP_VERSION=2.0.0
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your_super_secret_key_change_in_production
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=postgresql+asyncpg://mj_user:mj_password@localhost:5432/mj_network
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# AI Services
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash

PERPLEXITY_API_KEY=your_perplexity_api_key_here
PERPLEXITY_MODEL=llama-3.1-sonar-small-128k-online

# Authentication
JWT_SECRET_KEY=your_jwt_secret_key_change_in_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# MJ Network Settings
P2P_DISCOVERY_PORT=8888
P2P_MAX_PEERS=50
P2P_HEARTBEAT_INTERVAL=30
DEFAULT_MODE=mj
MODE_SWITCH_COOLDOWN=300
KALKI_MODE_TIMEOUT=1800

# Memory System
MEMORY_EXTRACTION_BATCH_SIZE=50
MEMORY_SIMILARITY_THRESHOLD=0.75
MEMORY_TTL_HOURS=24
EMBEDDING_MODEL=text-embedding-3-small

# WebSocket Configuration
WEBSOCKET_MAX_CONNECTIONS=1000
WEBSOCKET_PING_INTERVAL=20
WEBSOCKET_PING_TIMEOUT=20

# Voice (Optional)
ELEVENLABS_API_KEY=
ELEVENLABS_VOICE_ID=

# Security
CORS_ORIGINS=["*"]
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

